<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <% if (userDetails.length> 0) { %>
        <table class="table table-bordered table-striped">
            <tr>
                <td>S/N</td>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Email</td>
                <td>Password</td>
                <td>Action</td>
            </tr>
            <% for( let index=0; index < userDetails.length; index++ ) { %>
                <tr>
                    <td>
                        <%= index+1 %>
                    </td>
                    <td>
                        <%= userDetails[index].firstname %>
                    </td>
                    <td>
                        <%= userDetails[index].lastname %>
                    </td>
                    <td>
                        <%= userDetails[index].email %>
                    </td>
                    <td>
                        <%= userDetails[index].password %>
                    </td>
                    <td>
                        <form action="/delete" method="post">
                            <input type="hidden" name="userEmail" id="" value="<%=userDetails[index].email %>">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                        <form action="/edit" method="post">
                            <input type="hidden" name="userEmail" id="" value=<%=userDetails[index].email %>>
                            <button class="btn btn-warning">Edit</button>
                        </form>

                    </td>
                </tr>
                <% } %>
        </table>
        <% } else { %>
            <div class="bg-secondary shadow mt-3 p-5 w-50 mx-auto">
                <h3 class="text-center">No User Found</h3>
                <a class="text-decoration-underline fw-500 fs-4" href="signup">Go to SignUp</a>
            </div>
        <% } %>
         
</body>

</html>